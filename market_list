
def is_not_alpha_in_str(string):
    for char in string:
        if not char.isalpha():
            return True
    return False


def market_list(input_list):
    """Gets market list and manage it
    :param input_list: market list - the products seprated only by ','
    :type input_list: stt
    :return: True or False
    :rtype: none
	"""
    listed_input_list = input_list.lower().split(',')
    num = 0
    while num != 9:
        num = int(input("\n\n Please enter number (1-9) to manage the market list:\n\
    1 - Print the market list\n\
    2 - Print how match products we have is in the market list\n\
    3 - Get a product name and checks if it is in the market list\n\
    4 - Get a product name and checks how match times it is rote in the market list\n\
    5 - Get a product name and remove it (gust one apearance) from the market list\n\
    6 - Get a product name and isert it to the market list\n\
    7 - Print tha invalid product names from the market list\n\
    8 - Remove all the duplicates from the market list\n\
    9 - Exit \n"))
            
        if num == 1: # Print the market list
            print(','.join(listed_input_list))
            
        elif num == 2: # Print how match products we there is in the market list
            print(len(listed_input_list))
            
        elif num == 3: # Get a product name and checks if it is in the market list
            prod = input("Please enter product name and we'll check if it in the list: ")
            print(bool(listed_input_list.count(prod.lower())))
        
        elif num == 4: # Get a product name and checks how match times it is rote in the market list
            prod = input("Please enter product name and we'll count it in the list: ")
            print(listed_input_list.count(prod.lower()))
        
        elif num == 5: # Get a product name and remove it (gust one apearance) from the market list
            prod = input("Please enter product name to renome from the list: ")
            listed_input_list.remove(prod.lower())
        
        elif num == 6: # Get a product name and isert it to the market list
            prod = input("Please enter product name to insert to the list: ")
            listed_input_list.insert(0, prod.lower())
        
        elif num == 7: # Print tha invalid product names from the market list
            invalid_list = ''
            for i in range(len(listed_input_list)):
                if (len(listed_input_list[i]) < 3) or is_not_alpha_in_str(listed_input_list[i]):
                    invalid_list += listed_input_list[i] + ','
            print(invalid_list[:-1])
        
        elif num == 8: # Remove all the duplicates from the market list
            listed_input_list = list(dict.fromkeys(listed_input_list))
            
def main():
    # Call the function func
    market_list(input("Enter your market list (with commas and no spaces between the products: "))
        
if __name__ == "__main__":
    main()
